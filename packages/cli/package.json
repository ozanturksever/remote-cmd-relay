{
  "name": "@fatagnus/remote-cmd-relay",
  "version": "1.0.0",
  "description": "CLI tool for executing commands on remote machines through a Convex backend",
  "author": "Ozan Turksever <ozan.turksever@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fatagnus/remote-cmd-relay.git",
    "directory": "packages/cli"
  },
  "type": "module",
  "bin": {
    "remote-cmd-relay": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build --compile --outfile dist/remote-cmd-relay ./src/index.ts",
    "build:linux": "bun build --compile --target=bun-linux-x64 --outfile dist/remote-cmd-relay-linux ./src/index.ts",
    "build:macos": "bun build --compile --target=bun-darwin-x64 --outfile dist/remote-cmd-relay-macos ./src/index.ts",
    "build:all": "npm run build:linux && npm run build:macos",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "ssh2": "^1.17.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/ssh2": "^1.15.5",
    "typescript": "^5.7.2",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "remote",
    "command",
    "relay",
    "ssh",
    "convex",
    "cli"
  ]
}
