{
  "name": "@fatagnus/remote-cmd-relay",
  "version": "1.0.2",
  "description": "CLI tool for executing commands on remote machines through a Convex backend",
  "author": "Ozan Turksever <ozan.turksever@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ozanturksever/remote-cmd-relay.git",
    "directory": "packages/cli"
  },
  "type": "module",
  "bin": {
    "remote-cmd-relay": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist/*.js",
    "dist/*.d.ts"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "npm run build:npm",
    "build:npm": "tsc",
    "build:linux-amd64": "bun build --compile --target=bun-linux-x64 --outfile dist/remote-cmd-relay_linux_amd64 ./src/index.ts",
    "build:linux-arm64": "bun build --compile --target=bun-linux-arm64 --outfile dist/remote-cmd-relay_linux_arm64 ./src/index.ts",
    "build:darwin-amd64": "bun build --compile --target=bun-darwin-x64 --outfile dist/remote-cmd-relay_darwin_amd64 ./src/index.ts",
    "build:darwin-arm64": "bun build --compile --target=bun-darwin-arm64 --outfile dist/remote-cmd-relay_darwin_arm64 ./src/index.ts",
    "build:binaries": "npm run build:linux-amd64 && npm run build:linux-arm64 && npm run build:darwin-amd64 && npm run build:darwin-arm64",
    "prepublishOnly": "npm run build:npm",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "release": "bash scripts/release.sh"
  },
  "dependencies": {
    "ssh2": "^1.17.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/ssh2": "^1.15.5",
    "typescript": "^5.7.2",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "remote",
    "command",
    "relay",
    "ssh",
    "convex",
    "cli"
  ]
}
